<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorBackLogin"
        android:id="@+id/login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"
            android:textSize="14dip"
            android:text="@string/titulo_summary_1"
            android:id="@+id/textView1"
            android:textColor="@color/colorTextBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            android:textSize="17dip"
            android:text="@string/titulo_summary_2"
            android:id="@+id/textView2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
            <TextView
                android:layout_width="40dp"
                android:layout_height="7dp"
                android:id="@+id/textView4"
                android:background="@color/colorFondoWc"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="7dp"
                android:id="@+id/textView5"
                android:background="@color/colorFondoWc"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="7dp"
                android:id="@+id/textView6"
                android:background="@color/colorButtonLogin"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_iai"
                android:text="@string/indice_summary_1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/question_mark_b"/>
            <TextView
                android:id="@+id/txt_count_iai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@color/colorButtonLoginPsw"
                android:textColor="@color/colorInputLogin"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="192"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_ias"
                android:text="@string/indice_summary_2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="18dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/question_mark_b"/>
            <TextView
                android:id="@+id/txt_count_ias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@color/colorButtonLogin"
                android:textColor="@color/colorInputLogin"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="358"/>
        </LinearLayout>

        <Button
            android:id="@+id/boton_employ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dip"
            android:paddingStart="25dp"
            android:background="@drawable/button_menu"
            android:text="@string/btn_summary_emplo"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16dip"
            android:textAllCaps="false"
            android:gravity="left|center"
            />
        <Button
            android:id="@+id/boton_act_insec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dip"
            android:paddingStart="25dp"
            android:background="@drawable/button_menu"
            android:text="@string/btn_summary_act_insec"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16dip"
            android:textAllCaps="false"
            android:gravity="left|center"
            />
        <Button
            android:id="@+id/boton_proced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dip"
            android:paddingStart="25dp"
            android:background="@drawable/button_login_psw"
            android:text="@string/btn_summary_proc"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16dip"
            android:textAllCaps="false"
            android:gravity="left|center"
            />
        <Button
            android:id="@+id/boton_recom_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dip"
            android:paddingStart="25dp"
            android:background="@drawable/button_login_psw"
            android:text="@string/btn_summary_recom_com"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16dip"
            android:textAllCaps="false"
            android:gravity="left|center"
            />
        <Button
        android:id="@+id/boton_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:drawablePadding="20dip"
        android:paddingStart="25dp"
        android:drawableLeft="@drawable/save_white"
        android:background="@drawable/button_rec_psw"
        android:text="@string/btn_summary_save"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="16dip"
        android:textAllCaps="false"
        android:gravity="left|center"
        />
        <Button
            android:id="@+id/boton_dw_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dip"
            android:paddingStart="25dp"
            android:background="@drawable/button_rec_back"
            android:drawableLeft="@drawable/file_pdf"
            android:text="@string/btn_summary_dw_pdf"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16dip"
            android:textAllCaps="false"
            android:gravity="left|center"
            />

        <Button
            android:id="@+id/btn_terminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp"
            android:text="@string/btn_summary_send"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20dip"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_rec_back"
            android:textAllCaps="false"
            />
    </LinearLayout>
</ScrollView>