<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:clickable="true"
    android:paddingRight="15dp"
    android:paddingTop="6dp"
    android:background="@color/colorBackLogin">
    <LinearLayout
        android:layout_width="10dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorChkWorkers">

        <CheckBox android:id="@+id/chk_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorInputLogin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:checked="false"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_worker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del trabajador"
            android:textSize="15sp"
            android:textColor="@color/colorTextBlack"/>
        <TextView
            android:id="@+id/list_worker_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99887766554411"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"/>
    </LinearLayout>

</LinearLayout>