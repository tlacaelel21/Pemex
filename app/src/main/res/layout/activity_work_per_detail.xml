<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorBackLogin"
    android:id="@+id/login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/titulo_summary_1"
                android:id="@+id/textView1"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/centro_trabajo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/fecha_ejec"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="10dp"
                    android:textSize="16dip"
                    android:text="@string/fecha_ejec_ini"
                    android:id="@+id/tVFI"
                    android:textColor="@color/colorTextBlack"
                    android:layout_toRightOf="@id/imageButton"
                    />
                <EditText
                    android:id="@+id/et_fecha_ini"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="85dp"
                    android:paddingStart="10dp"
                    android:inputType="text"
                    android:background="@color/colorInputLogin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="10dp"
                    android:textSize="16dip"
                    android:text="@string/fecha_ejec_fin"
                    android:id="@+id/tVFF"
                    android:textColor="@color/colorTextBlack"
                    android:layout_toRightOf="@id/imageButton"
                    />
                <EditText
                    android:id="@+id/et_fecha_fin"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="15dp"
                    android:paddingStart="10dp"
                    android:inputType="text"
                    android:background="@color/colorInputLogin"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/descri"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:id="@+id/eTDesc"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/tipo_act"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/tipo_actividad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/titulo_proc"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/eTFor"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/modalidad"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/eTModalidad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/resp"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/eTResponsable"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/ast"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/eTAST"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/per_trab"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/eTPermisoTrabajo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/ord_trab"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:id="@+id/eTOrdenTrabajo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="text"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/proc_req"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:id="@+id/eTProcReq"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/obs"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:id="@+id/eTObservaciones"
                android:background="@color/colorInputLogin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="16dip"
                android:text="@string/esp"
                android:textColor="@color/colorTextBlack"
                android:layout_toRightOf="@id/imageButton" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:id="@+id/eTEspGen"
                android:background="@color/colorInputLogin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:text="@string/button_cancelar"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dip"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/button_rec_back"
                android:textAllCaps="false"
                android:id="@+id/btn_cancelar"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:text="@string/button_audit_p2_cont"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dip"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/button_rec_psw"
                android:textAllCaps="false"
                android:id="@+id/btn_continuar"/>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>